<body>

<div class="card">
    <div class="title">Smart Shopping</div>
    <div class="subtitle">Minimal • Fast • Clean</div>

    <div class="stats">
        <div class="stat">
            <span id="bag">0</span>
            <small>Bag Items</small>
        </div>
        <div class="stat">
            <span id="wishlist">0</span>
            <small>Wishlist</small>
        </div>
    </div>

    <div class="sale-box">
        <div class="sale-title"> 1 + 1 Sale</div>
        <div class="qty-control">
            <button class="minus" id="minusBtn" onclick="removeSale()" disabled>−</button>
            <div class="qty" id="sale">0</div>
            <button class="plus" onclick="addSale()">+</button>
        </div>
    </div>

    <div class="actions">
        <button class="bag-btn" onclick="addToBag()">Add to Bag</button>
        <button class="wish-btn" onclick="moveToWishlist()">Move to Wishlist</button>
    </div>
</div>

<script>
    let bag = 0;
    let wishlist = 0;
    let sale = 0;

    function addToBag() {
        bag++;
        updateUI();
    }

    function moveToWishlist() {
        if (bag > 0) {
            bag--;
            wishlist++;
            updateUI();
        }
    }

    function addSale() {
        sale += 2;
        bag += 2;
        updateUI();
    }

    function removeSale() {
        if (sale >= 2) {
            sale -= 2;
            bag -= 2;
            updateUI();
        }
    }

    function updateUI() {
        document.getElementById("bag").innerText = bag;
        document.getElementById("wishlist").innerText = wishlist;
        document.getElementById("sale").innerText = sale;
        document.getElementById("minusBtn").disabled = sale === 0;
    }
</script>

</body>
