<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Metro Ticket Discount</title>

<style>
    * {
        box-sizing: border-box;
        font-family: "Segoe UI", sans-serif;
    }

    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        background: #ffffff;
        width: 360px;
        padding: 25px;
        border-radius: 14px;
        box-shadow: 0 20px 35px rgba(0,0,0,0.3);
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    label {
        font-size: 14px;
        font-weight: 600;
        margin-top: 10px;
        display: block;
    }

    input, select {
        width: 100%;
        padding: 10px;
        margin-top: 6px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 14px;
    }

    button {
        width: 100%;
        padding: 12px;
        margin-top: 18px;
        border-radius: 10px;
        border: none;
        background: #2c5364;
        color: white;
        font-size: 15px;
        font-weight: bold;
        cursor: pointer;
    }

    .result {
        margin-top: 18px;
        padding: 12px;
        border-radius: 10px;
        background: #f4f6f8;
        text-align: center;
        font-weight: bold;
    }
</style>
</head>

<body>

<div class="card">
    <h2>Metro Ticket Discount</h2>

    <label>Age</label>
    <input type="number" id="age" placeholder="Enter age">

    <label>Gender</label>
    <select id="gender">
        <option value="">Select gender</option>
        <option value="female">Female</option>
        <option value="male">Male</option>
    </select>

    <label>Base Ticket Price (₹)</label>
    <input type="number" id="price" placeholder="Enter ticket price">

    <button onclick="calculateTicket()">Calculate Fare</button>

    <div class="result" id="result"></div>
</div>

<script>
function calculateTicket() {
    const age = Number(document.getElementById("age").value);
    const gender = document.getElementById("gender").value;
    const price = Number(document.getElementById("price").value);

    if (!age || !gender || !price) {
        document.getElementById("result").innerText = "Please enter all details.";
        return;
    }

    let discount = 0;

    // Kids under 5 – free
    if (age < 5) discount = Math.max(discount, 100);

    // Kids up to 8 – 50%
    if (age >= 5 && age <= 8) discount = Math.max(discount, 50);

    // Senior citizens
    if (age > 65) discount = Math.max(discount, 70);

    // Female discount
    if (gender === "female") discount = Math.max(discount, 50);

    const finalFare = price - (price * discount / 100);

    document.getElementById("result").innerText =
        `Discount Applied: ${discount}% | Final Fare: ₹${finalFare.toFixed(2)}`;
}
</script>

</body>
</html>
